---
import ProjectList from "../../components/project/ProjectList.svelte";
import ProjectItem from "../../components/project/ProjectItem.svelte";
import FilterableList from "../../components/project/FilterableList.svelte";

import Site from "../../layouts/Site.astro";

import { getCollection, type CollectionEntry } from "astro:content";

// use date
const projects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
).sort((a, b) => (a.data.date > b.data.date ? -1 : 1));

const projectData = projects.map((project) => ({
  slug: project.slug,
  ...project.data,
}));

const tags = {
  "show all": "",
  "spatial design": "spatial design",
  "ui design": "ui design",
  "product design": "product design",
  "3d models": "3d model",
  illustrations: "illustration",
};
---

<Site>
  <div class="glass-bg" style="padding-top: 125px;">
    <FilterableList tags={tags} projects={projectData} client:load />
  </div>
</Site>

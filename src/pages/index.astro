---
import { SEO } from "astro-seo";
import Site from "../layouts/Site.astro";

import Hero from "../components/hero/Hero.svelte";
import Blobs from "../components/Blobs.svelte";

import ProjectItem from "../components/project/ProjectItem.svelte";
import ProjectContainer from "../components/project/ProjectContainer.svelte";
import ViewProjectsButton from "../components/project/ViewProjectsButton.astro";

import Footer from "../components/Footer.astro";

import { getEntry } from "astro:content";
const featuredProjects = ["studygarden", "dr-trust"];
---

<html>
  <SEO
    title="Jessica Sheng"
    description="hi! i'm jessica, and i design experiences. welcome to my creative hub :) here, you can see my portfolio and all my other little project sprints. i creat xr experiences, design products, and make art."
    openGraph={{
      basic: {
        title: "Jessica Sheng",
        type: "A type.",
        image:
          "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
      },
    }}
  />
</html>
<Site>
  <div id="heroWrapper" slot="header">
    <Hero client:load />
    <Blobs client:load />
  </div>
  <div class="glass-full">
    <div>
      <h2 id="featured-projects">featured projects</h2>
    </div>
    <ProjectContainer>
      {
        featuredProjects.map(async (slug) => {
          const project = await getEntry("projects", slug);
          if (!project) return null;
          return <ProjectItem project={{ slug, ...project.data }} />;
        })
      }
    </ProjectContainer>
    <ViewProjectsButton />
    <Footer />
  </div>
</Site>
